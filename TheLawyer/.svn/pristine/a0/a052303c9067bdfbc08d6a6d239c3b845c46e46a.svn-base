#import "UIView+Frame.h"

@implementation UIView (Frame)

- (void)setX:(CGFloat)x
{
    CGRect frame = self.frame;
    frame.origin.x = x;
    self.frame = frame;
}

- (CGFloat)x
{
    return self.frame.origin.x;
}

- (void)setY:(CGFloat)y
{
    CGRect frame = self.frame;
    frame.origin.y = y;
    self.frame = frame;
}

- (CGFloat)y
{
    return self.frame.origin.y;
}

- (void)setXWidth:(CGFloat)xWidth
{
    CGRect frame = self.frame;
    frame.size.width = xWidth;
    self.frame = frame;
}

- (CGFloat)xWidth
{
    return self.frame.size.width;
}

- (void)setXHeight:(CGFloat)xHeight
{
    CGRect frame = self.frame;
    frame.size.height = xHeight;
    self.frame = frame;
}

- (CGFloat)xHeight
{
    return self.frame.size.height;
}

@end
